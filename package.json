{
  "name": "holistics-js",
  "version": "1.0.0",
  "description": "Holistics open-source javascript libraries",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/holistics/js",
  "author": "Holistics",
  "license": "MIT",
  "scripts": {
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:publish": "yarn test && lerna publish",
    "lerna:version": "yarn test && lerna version --conventional-commits",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "test": "env TZ='Europe/Berlin' LC_ALL='de-DE' jest packages/date-parser/src/dateParserV3.test.js --coverage=false && env TZ='Asia/Singapore' LC_ALL='de-De' jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/plugin-transform-runtime": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "babel-jest": "^29.6.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "husky": "^4.2.5",
    "jest": "^29.6.0",
    "lerna": "^4.0.0",
    "lint-staged": "^9.5.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": "18.x.x",
    "yarn": ">=1.21.0"
  }
}

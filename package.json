{
  "name": "holistics-js",
  "version": "1.0.0",
  "description": "Holistics open-source javascript libraries",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/holistics/js",
  "author": "Holistics",
  "license": "MIT",
  "scripts": {
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:publish": "yarn test && lerna publish",
    "lerna:version": "yarn test && lerna version --conventional-commits",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "test": "env TZ='Asia/Singapore' jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.7.7",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": "12.x.x",
    "yarn": ">=1.21.0"
  }
}
